/* ÈÅÆÁΩ© */
.cart-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 99;
}

/* ÂºπÂ±Ç‰∏ª‰Ωì */
.cart-popup {
  position: fixed;
  left: 0;
  right: 0;

  /* üëá ÂÖ≥ÈîÆÔºöÈöêËóèÊó∂ÔºåÂÆåÂÖ®Ê≤âÂà∞Â±èÂπï‰∏ã */
  bottom: calc(-100vh);

  max-height: calc(100vh - 120rpx);
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 100;
  box-shadow: 0 -12rpx 40rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;

  display: flex;
  flex-direction: column;

  transition: bottom 0.3s ease;

  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* ÊòæÁ§∫Áä∂ÊÄÅ */
